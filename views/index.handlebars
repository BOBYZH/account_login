  <div class="container my-5">
    <div class="mx-auto col-12 my-5">
      <form method="post" action="/" class="login my-5">
        <a href="/" class="text-dark"><h2 class="mx-auto col-7 my-3 text-center font-weight-normal">Account Login</h2><a>
        <input type="email" class="email form-row mx-auto col-7 col-lg-4 my-4 border border-dark" placeholder="Email"  style="height: 40px;" name="email" value={{inputInfo.email}}>
        <input type="password" class="password form-row mx-auto col-7 col-lg-4 my-4 border border-dark" placeholder="Password" style="height: 40px;" name="password">
        {{#if errorMessage}}<span class="text-danger form-row mx-auto col-7 col-lg-4 my-0 text-center">{{errorMessage}}</span>{{/if}}
        <div class="submit col-12 col-lg-2 my-5 mx-auto">        
          <button class="form-row mx-auto py-2 px-4 bg-white border border-secondary rounded-lg shadow-sm">Sign in</button>  
        </div>
      </form>
    </div>
  </div>